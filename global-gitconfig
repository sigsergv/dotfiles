; vim: set noexpandtab:
[alias]
	stat = status
	st = status
	ci = commit
	br = branch
	co = checkout
	full-clean = clean -dfX

; show detailed commit info, but without a full diff
	info = show --name-status
	reflogdate = reflog --date=iso
;    up = pull --rebase
;  df = diff
;  lg = log -p

[core]
	quotepath = false
	precomposeunicode = true
	; always jump to first line in commit messages
	editor = vim +1
	autocrlf = false

[user]
	name = Sergey Stolyarov
	useConfigOnly = true
; Use this is workaround to disable commits with autogenerated (guessed from system settings) email address when
; option user.useConfigOnly is not available
;	email = (none)

[push]
	default = simple

[pull]
	rebase = true

[init]
	defaultBranch = master

[diff]
	renameLimit = 20000

[url "https://"]
	insteadOf = git://
