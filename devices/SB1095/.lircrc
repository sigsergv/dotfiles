begin
  prog = irexec
  button = KEY_PLAYPAUSE
  config = xte 'key XF86AudioPlay'
end

begin
  prog = irexec
  button = KEY_NEXT
  config = xte 'key XF86AudioNext'
end


begin
  prog = irexec
  button = KEY_PREV
  config = xte 'key XF86AudioPrev'
end

begin
  prog = irexec
  button = KEY_VOLUMEUP
  repeat = 1
  config = sh -c 'pactl set-sink-mute 1 false ; pactl set-sink-volume 1 +5%'
end

begin
  prog = irexec
  button = KEY_VOLUMEDOWN
  repeat = 1
  config = sh -c 'pactl set-sink-mute 1 false ; pactl -- set-sink-volume 1 -5%'
end
