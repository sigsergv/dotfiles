[Allow all users to shutdown]
Identity=unix-user:*
Action=org.freedesktop.login1.stop-multiple-users
ResultInactive=yes
ResultActive=yes
ResultAny=yes

[Allow all users to reboot]
Identity=unix-user:*
Action=org.freedesktop.login1.reboot-multiple-sessions
ResultInactive=yes
ResultActive=yes
ResultAny=yes
